ng () {
       echo ${1}行目が違うよ
       res=1
}

res=0

# テストケース1: 正常な入力
out=$(echo "5 3" | ./comb.py)
[ "${out}" = "5C3 = 10" ] || ng "$LINENO"

# テストケース2: nCr : n < r
out=$(echo "5 6" | ./comb.py)
[ "$?" = 1 ] || ng "$LINENO"
[ "${out}" = "無効な入力: 5 6" ] || ng "$LINENO"

# テストケース3: 無効な入力
out=$(echo "5 a" | ./comb.py)
[ "$?" = 1 ] || ng "$LINENO"
[ "${out}" = "無効な入力: 5 a" ] || ng "$LINENO"

# テストケース4: 空の入力
out=$(echo | ./comb.py)
[ "$?" = 1 ] || ng "$LINENO"
[ "${out}" = "無効な入力: " ] || ng "$LINENO"

[ "${res}" = 0 ] && echo OK
exit $res

