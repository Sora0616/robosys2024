ng () {
       echo ${1}行目が違うよ
       res=1
}

res=0

# テストケース1: nCr : n > r 
out=$(echo 5 3 | ./combination.py)
[ "${out}" = "5C3 = 10" ] || ng "$LINENO"

# テストケース2: nCr : n < r
out=$(echo 5 6 | ./combination.py)
[ "$?" = 1 ] || ng "$LINENO"

# テストケース3: nCr : n < 0
out=$(echo -5 -3 | ./combination.py)
[ "$?" = 1 ] || ng "$LINENO"

# テストケース4: 小数の入力 
out=$(echo 6.2 3.3 | ./combination.py)
[ "$?" = 1 ] || ng "$LINENO"

# テストケース5: 分数の入力
out=$(echo 5/4 1/2 | ./combination.py)
[ "$?" = 1 ] || ng "$LINENO"

# テストケース6: 数字以外の入力
out=$(echo 5 a | ./combination.py)
[ "$?" = 1 ] || ng "$LINENO"

# テストケース7: 空の入力
out=$(echo | ./combination.py)
[ "$?" = 1 ] || ng "$LINENO"

[ "${res}" = 0 ] && echo OK
exit $res

